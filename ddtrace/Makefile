##
##  Makefile -- Build procedure for sample ddtrace Apache module
##  Autogenerated via ``apxs -n ddtrace -g''.
##

builddir=.
apxs_builddir=$(shell apxs -q installbuilddir)
top_builddir=$(apxs_builddir)/..
include $(apxs_builddir)/special.mk

#   the used tools
APACHECTL=apachectl

#   additional defines, includes and libraries
#DEFS=-Dmy_define=my_value
#INCLUDES=-Imy/include/dir
#LIBS=-Lmy/lib/dir -lmylib
CXX = g++
CFLAGS = -Wall -Wextra -Werror -Wno-unused-parameter -Wno-missing-field-initializers
CXXFLAGS = -Wall -Wextra -Werror -Wnon-virtual-dtor -Woverloaded-virtual -Wold-style-cast -std=c++14
# MOD_CXXFLAGS = -std=c++14
MOD_INCLUDES = -I../../dd-opentracing-cpp/include -I../../dd-opentracing-cpp/deps/include
SH_LIBS = -L../../dd-opentracing-cpp/.build -L../../dd-opentracing-cpp/deps/lib -lstdc++ -Xlinker -Bstatic -ldd_opentracing -lopentracing -Wl,-Bdynamic

#   the default target
all: local-shared-build

#   install the shared object file into Apache 
install: install-modules-yes

#   cleanup
clean:
	-rm -f mod_ddtrace.o mod_ddtrace.lo mod_ddtrace.slo mod_ddtrace.la 

#   simple test
test: reload
	lynx -mime_header http://localhost/ddtrace

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

